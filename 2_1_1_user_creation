USER=ioann
useradd $USER
asswd $USER
mkdir /home/$USER/bin
chown $USER /home/$USER/
chown -R $USER:$USER /home/$USER
chmod 700 /home/$USER
sudo chroot /home/$USER/ /bin/bash
