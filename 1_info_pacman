#!/bin/bash 
# CLEAR unnecessary
sudo pacman -Rscun vi vim --noconfirm --verbose 

# FREEZE start config
> list_pacman_mini.txt
sudo pacman -Qqv > list_pacman_mini.txt --verbose 

# INSTALL ALL PACKAGES
sudo pacman -S list_pacman_start.txt --noconfirm --verbose 

# YAY 
LINK=https://aur.archlinux.org/yay.git
NAME=$(basename "$LINK" | sed 's/\.git$//')

git clone $LINK ~/git
cd ~/git.$NAME
makepkg -si
