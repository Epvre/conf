#!/bin/bash 
# CLEAR unnecessary
pacman -Rscun vi vim 

# FREEZE start config
pacman -Rscun vi vim 
> list_pacman_mini.txt
pacman -Qqv > list_pacman_mini.txt

# INSTALL ALL PACKAGES


# YAY 
LINK=https://aur.archlinux.org/yay.git
NAME=$(basename "$LINK" | sed 's/\.git$//')

pacman -S base-devel --noconfirm --needed
cd ~/git
git clone $LINK
cd $NAME
makepkg -si
